        viewer.zoomTo(1); // Zoom to natural size (100%)
        viewer.zoomTo(.5, true);
        viewer.zoomTo(.5, false);

        // rotate the image using CSS3 transform property
        viewer.rotate(90);
        viewer.rotateTo(360); // Rotate a full round

        // flip the image using CSS3 transform property
        viewer.scale(-1); // <a href="https://www.jqueryscript.net/tags.php?/Flip/">Flip</a> both horizontal and vertical
        viewer.scale(-1, 1); // Flip horizontal
        viewer.scale(1, -1); // Flip vertical

