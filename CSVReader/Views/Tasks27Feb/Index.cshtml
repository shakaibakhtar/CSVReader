        // show the viewer immediately or not
        viewer.show(boolean);

        // hide the viewer immediately or not
        viewer.hide(boolean);

        // view the second image
        viewer.view(1);

        // previous image
        viewer.prev([loop = false]);

        // next image
        viewer.next([loop = false]);

        // play the image gallery in fullscreen or not
        viewer.play(boolean);

        // stop the autoplay
        viewer.stop();

        // enter fullscreen modal mode
        viewer.full();

        // exit fullscreen modal mode
        viewer.exit();

        // show the current ratio of the image with percentage.
        viewer.tooltip();

        // toggle the image size between its natural size and initial size.
        viewer.toggle();

        // reset the plugin.
        viewer.reset();

        // up<a href="https://www.jqueryscript.net/time-clock/">date</a> the plugin.
        viewer.reset();

        // destroy the plugin
        viewer.destroy();

        // move images
        viewer.move(1);
        viewer.move(-1, 0); // Move left
        viewer.move(1, 0);  // Move right
        viewer.move(0, -1); // Move up
        viewer.move(0, 1);  // Move down

