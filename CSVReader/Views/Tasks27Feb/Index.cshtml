        $(function () {
            $('.pop').on('click', function () {
                $('.imagepreview').attr('src', $(this).find('img').attr('src'));
                $('#imagemodal').modal();
            });
        });
    </script>
    <script>
        $('#prev-img').on('click', function () {
            var src = $('.imagepreview').attr('src');
            var img_num = parseInt(src.charAt(src.length - 5));

            var total_images = parseInt($('.pop').length);

            if (img_num === 1) {
                img_num = 8;
            }
            else {
                img_num--;
            }
            src = '/Content/Gallery_Images/agent-' + img_num + '.jpg';
            $('.imagepreview').attr('src', src);
        });
        $('#next-img').on('click', function () {
            var src = $('.imagepreview').attr('src');
            var img_num = parseInt(src.charAt(src.length - 5));

            var total_images = parseInt($('.pop').length);

            if (img_num < total_images) {
                img_num++;
            }
            else {
                img_num = 1;
            }
            src = '/Content/Gallery_Images/agent-' + img_num + '.jpg';
            $('.imagepreview').attr('src', src);
        });
    </script>

